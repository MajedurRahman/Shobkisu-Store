<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="3dp">

        <RelativeLayout
            android:id="@+id/id_item_itemCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_item_product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_add_cart" />

            <View
                android:id="@+id/saparateline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/id_item_product_name_text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/sweetPink" />

            <TextView
                android:id="@+id/id_item_product_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_item_product_image"
                android:layout_margin="3dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorAsphalt"
                android:text="productItem Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saparateline"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Price : 1244 BDT"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/productAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productPrice"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Available: 1244 pcs "
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/productSold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productAvailable"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Sold : 464 pcs "
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
